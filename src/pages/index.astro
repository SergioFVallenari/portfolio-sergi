				<ReduxIcons class="size-12 lg:size-20" />
				<MySqlIcon class="size-12 lg:size-20" />
				<PostgreIcon class="size-12 lg:size-20" />
				<PhpIcon class="size-12 lg:size-20 bg-[#AEB2D5] rounded" />
				<HtmlIcon class="size-12 lg:size-20" />
				<CssIcon class="size-12 lg:size-20" />
				<SequelizeIcon class="size-12 lg:size-20" />
