---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/onest";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link
			href="https://fonts.cdnfonts.com/css/space-mono"
			rel="stylesheet"
		/>
		<link rel="icon" type="image/svg+xml" href="/code.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative text-black dark:text-white">
		<div
			class="absolute inset-0 -z-10 min-h-screen w-full items-center px-5 py-24 bg-gray-200 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))] dark:[background:radial-gradient(125%_125%_at_50%_10%,#181217_40%,#290500_100%)]"
		>
		</div>
		<Header />
		<slot />
		<Footer />
	</body><style is:global>
		:root {
			color-scheme: light dark;
		}
		.fade-in {
			opacity: 0;
			transition: opacity 0.8s ease-in-out;
		}

		.fade-in.appear {
			opacity: 1;
		}

		.slide-left {
			opacity: 0;
			transform: translateX(-50%);
			transition:
				opacity 0.5s ease-in-out,
				transform 0.5s ease-in-out;
		}

		.slide-left.appear {
			opacity: 1;
			transform: translateX(0);
		}
	
		.slide-bottom {
			opacity: 0;
			transform: translateY(50%);
			transition:
				opacity 0.5s ease-in-out,
				transform 0.5s ease-in-out;
		}

		.slide-bottom.appear {
			opacity: 1;
			transform: translateX(0);
		}
	
		html {
			font-family: "Space Mono", sans-serif;
			scroll-behavior: smooth;
		}
		body {
			background-color: #000;
			min-height: 100vh;
			display: flex;
			flex-direction: column;
		}
	</style>
</html>
